@model ProjeCV.Models.Sınıf.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>BAŞLIK</th>
            <th>ALT BAŞLIK</th>
            <th>TARİH</th>
            <th>DETAYLAR</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>ACTİONLİNK</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Deger2)
        {
        <tr>
            <th>@x.ID</th>
            <td>@x.TİTLE</td>
            <td>@x.SUBTİTLE</td>
            <td>@x.DATE</td>
            <td>@x.DETAİLS</td>
            <td><a href="/Deneyimler/DeneyimSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Deneyimler/DeneyimGetir/@x.ID" class="btn btn-success">GÜNCELLE</a></td>
            <td>
                @Html.ActionLink("Sil Butonu ", "Sil", new { id = x.ID },
          new { @class = "btn btn-warning", onclick = "return confirm ('Silmek İstiyor Musunuz?')" })
            </td>

        </tr>
        }
    </tbody>
</table>

<a href="/Deneyimler/YeniDeneyim/" class="btn btn-info">Yeni Deneyim Ekle</a>